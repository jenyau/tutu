<p id="notice"><%= notice %></p>

<p>
  <strong><%= t('.number') %></strong>
  <%= @train.number %>
</p>
<table>
  <thead>
    <tr>
      <th><%= t('.ticket_name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @train.tickets.each do |train_ticket| %>
      <tr>
        <td><%= train_ticket.passenger_name %></td>
        <td><%= link_to t('common.show'), train_ticket %></td>
        <td><%= link_to t('common.edit'), edit_ticket_path(train_ticket) %></td>
        <td><%= link_to t('common.delete'), train_ticket, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
<strong><%= t('.route') %></strong>
<% if @train.route.present? %>
  <%= @train.route.name %>
<% else %>
  <%= t('.route_empty') %>
<% end %>
</p>

<p>
  <strong><%= t('.coupe_carraiges') %></strong><br>
  <%= render  'train_carriages', carriages: @train.carriages.coupe%>
</p>

<p>
  <strong><%= t('.economy_carriages') %></strong><br>
  <%= render 'train_carriages', carriages: @train.carriages.economy %>
  </p>

<p>
  <strong><%= t('.sv_carriages') %></strong><br>
  <%= render 'train_carriages', carriages: @train.carriages.sv %>
  </p>

<p>
  <strong><%= t('.seats_carriages') %></strong><br>
  <%= render 'train_carriages', carriages: @train.carriages.seats %>
</p>

<p><%= link_to t('.add_carriage'), new_admin_train_coupe_carriage_path(@train) %></p>

<%= link_to t('common.edit'), edit_admin_train_path(@train) %>
<%= link_to t('common.back'), admin_trains_path %>
