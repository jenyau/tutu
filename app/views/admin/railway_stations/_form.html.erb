<%= form_with(model: [:admin, station], id: "edit_railway_station_#{station.id}", html: {style: "display: #{hidden ? 'none' : 'block'}"}, local: true) do |form| %>

  <%= render 'common/errors', resource: station %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :routes %>
    <%= form.collection_select :route_ids, Route.all, :id, :name, {}, {multiple: true} %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: station.new_record? ? 'Создать' : 'Изменить') %>
  </div>
<% end %>
