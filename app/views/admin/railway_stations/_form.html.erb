<%= form_with(model: [:admin, @railway_station], local: true) do |form| %>

  <%= render 'common/errors', resource: @railway_station %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :routes %>
    <%= form.collection_select :route_ids, Route.all, :id, :name, {}, {multiple: true} %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: @railway_station.new_record? ? 'Создать' : 'Изменить') %>
  </div>
<% end %>
