<p id="notice"><%= notice %></p>
<p>
  <strong><%= t('.name') %></strong>
  <%= @railway_station.title %>
</p>
<p>
  <strong><%= t('.routes') %></strong>
  <% if @railway_station.routes.empty? %>
    <%= t('.routes_empty') %>
  <% else %>
    <% @railway_station.routes.each do |route| %>
    <ul>
    <li><%= route.name %></li>
    </ul>
    <% end %>
  <% end %>
</p>

<%= link_to t('common.edit'), edit_admin_railway_station_path(@railway_station) %> |
<%= link_to t('common.back'), admin_railway_stations_path %>
