<%= form_for [:admin, @train, @sv_carriage] do |form| %>

  <%= render 'common/errors', resource: @sv_carriage %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: sv_carriage.new_record? ? 'Создать' : 'Изменить') %>
  </div>
<% end %>
