<%= form_for [@train, @carriage] do |form| %>

  <%= render 'common/errors', resource: @carriage %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>

  <div class="field">
    <%= form.label :top_seats %>
    <%= form.text_field :top_seats %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.collection_select :type, [CoupeCarriage.first, EconomyCarriage.first, SvCarriage.first, SeatsCarriage.first], :type, :type %>
     </div>

  <div class="actions">
    <%= form.submit "#{ @carriage.new_record? ? 'Создать' : 'Изменить' }" %>
  </div>
<% end %>
