<%= form_for [@train, @economy_carriage] do |form| %>

  <%= render 'common/errors', resource: @economy_carriage %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>

  <div class="field">
    <%= form.label :top_seats %>
    <%= form.text_field :top_seats %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats %>
  </div>

  <div class="field">
    <%= form.label :side_top_seats %>
    <%= form.text_field :side_top_seats %>
  </div>

  <div class="field">
    <%= form.label :side_bottom_seats %>
    <%= form.text_field :side_bottom_seats %>
  </div>

  <div class="actions">
    <%= form.submit "#{ @economy_carriage.new_record? ? 'Создать' : 'Изменить' }" %>
  </div>
<% end %>
